<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Baby Shower RSVP</title>
  <script src="https://cdn.tailwindcss.com"></script>
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;700&display=swap" rel="stylesheet">
  <style>
    body { font-family: 'Roboto', sans-serif; }

    /* Intro Modal Style */
    #introModal {
      background: rgba(0,0,0,0.6);
      backdrop-filter: blur(4px);
      transition: opacity 1s ease;
    }
    .fade-out {
      opacity: 0;
      pointer-events: none;
    }

    /* Animations */
    @keyframes bounceScale {
      0%, 100% { transform: scale(1); }
      50% { transform: scale(1.1); }
    }
    .animate-bounceScale {
      animation: bounceScale 2s infinite;
    }

    .animate-fadeIn {
      animation: fadeIn 1s ease forwards;
    }
    @keyframes fadeIn {
      from { opacity: 0; transform: translateY(20px);}
      to { opacity: 1; transform: translateY(0);}
    }
  </style>
</head>
<body class="bg-pink-50 text-gray-800">

  <!-- Intro Modal -->
  <div id="introModal" class="fixed inset-0 flex flex-col items-center justify-center z-50" style="background-image: url('/assets/images/main_bg_1.jpg');">
    <div class="bg-white rounded-3xl shadow-2xl p-8 flex flex-col items-center text-center animate-bounceScale">
      <img src="/assets/images/ganpati.jpg" 
           alt="Baby" class="w-32 h-32 rounded-full mb-4 shadow-lg">
      <h1 class="text-3xl font-bold text-pink-600 mb-2">Welcome to Our Baby Shower! üéÄ</h1>
      <p class="text-gray-600 mb-4">We are so excited to celebrate our little one with you!</p>
    </div>
  </div>

  <!-- Main Website -->
  <div id="mainContent" class="opacity-0 transition-opacity duration-1000">

    <div class="min-h-screen flex flex-col md:flex-row">

      <!-- Left: Image Section -->
      <div class="relative md:w-1/2 w-full h-64 md:h-auto bg-cover bg-center" 
           style="background-image: url('/assets/images/radhakrishna.jpg');">
        <div class="absolute inset-0 bg-black/30 flex flex-col items-center justify-center px-4 text-center">
          <h1 class="text-white text-3xl md:text-5xl font-bold mb-4 animate-pulse"></h1>
        </div>
      </div>

      <!-- Right: RSVP Section -->
      <div class="md:w-1/2 w-full flex flex-col justify-center items-center px-6 py-10" style="background-image: url('/assets/images/bg.jpg');">
        <div class="max-w-md w-full bg-white shadow-2xl rounded-3xl p-8 animate-fadeIn" >
          <h2 class="text-2xl font-semibold mb-2 text-center text-pink-600">You're Invited!</h2>
          <p class="text-center text-lg mb-4 text-gray-700">Join us to celebrate the arrival of our little one üë∂</p>
          
          <!-- Event Details -->
          <div class="text-sm text-center mb-6 space-y-2">
            <p><strong>Date:</strong> March 8, 2026</p>
            <p><strong>Time:</strong> 9:30 AM</p>
            <p><strong>Address:</strong> H.M.S. Banquet Hall, Ajax, ON, L1S 4S4</p>
            <a href="https://www.google.com/maps/place/H.M.S.+Banquet+Hall/@43.8385297,-79.0205891,620m/data=!3m2!1e3!4b1!4m6!3m5!1s0x89d4df000e4f09f5:0xc9df397db967c7d3!8m2!3d43.8385297!4d-79.0205891!16s%2Fg%2F11vzbmb2ql?entry=ttu&g_ep=EgoyMDI2MDIwMy4wIKXMDSoASAFQAw%3D%3D" target="_blank" class="inline-flex items-center gap-2 text-blue-600 hover:underline">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-blue-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 9.75L12 3l9 6.75M4.5 10.5v9.75h5.25V15h4.5v5.25H19.5V10.5" />
              </svg>
              View Location
            </a>
          </div>
<div id="godModal" class="fixed inset-0 bg-black/50 flex items-center justify-center z-50 hidden">
  <div class="bg-white rounded-2xl shadow-xl p-6 text-center max-w-sm w-full animate-pulse">
    <img src="/assets/images/ganpati.jpg" alt="Satyanarayan" class="w-24 mx-auto mb-4" />
    <h2 class="text-xl font-semibold text-purple-700">Sending your RSVP...</h2>
    <p class="text-gray-600 mt-2">Thank You üôè</p>
  </div>
</div>
          <!-- RSVP Form -->
          <form id="rsvpForm" class="space-y-4" method="post" action="/api/rsvp/">
            <input type="text" name="name" placeholder="Full Name" required class="w-full px-4 py-2 border rounded-xl focus:ring-2 focus:ring-pink-300">
            <input type="email" name="email" placeholder="Email Address" required class="w-full px-4 py-2 border rounded-xl focus:ring-2 focus:ring-pink-300">
            <select name="attendance" required class="w-full px-4 py-2 border rounded-xl focus:ring-2 focus:ring-pink-300">
              <option value="">Will you attend?</option>
              <option value="yes">Yes, I‚Äôll attend</option>
              <option value="no">Sorry, I can‚Äôt make it</option>
            </select>
            <div class="flex gap-2">
              <input type="number" name="adults" placeholder="Adults" min="0" class="w-1/2 px-4 py-2 border rounded-xl focus:ring-2 focus:ring-pink-300" required>
              <input type="number" name="kids" placeholder="Kids" min="0" class="w-1/2 px-4 py-2 border rounded-xl focus:ring-2 focus:ring-pink-300" required>
            </div>
            <button type="submit" class="w-full bg-pink-600 text-white font-semibold py-2 rounded-xl hover:bg-pink-700 transition">Submit RSVP</button>
          </form>

          <p id="confirmationMsg" class="mt-4 text-green-600 font-medium text-center"></p>

        </div>

        <!-- Footer -->
        <footer class="text-center text-sm text-gray-600 mt-6">
          <h3 class="bg-pink-500 text-white px-4 py-2 rounded-xl">Please RSVP Before February 15, 2026</h3>
        </footer>
      </div>
    </div>
  </div>

  <script>
    const introModal = document.getElementById("introModal");
    const mainContent = document.getElementById("mainContent");

    // Automatically fade out after 5 seconds
    setTimeout(() => {
      introModal.classList.add("fade-out");
      setTimeout(() => {
        introModal.style.display = "none";
        mainContent.style.opacity = "1";
      }, 1000); // smooth transition
    }, 2000);

   const params = new URLSearchParams(window.location.search);
          const msg = params.get("msg");
          if (msg) {
            if(msg=='You have already Registered üòï Use another Email'){
                  const coloredText = '<span style="color: rgb(222, 60, 60);">You have already Registered üòï Use another Email.</span>';
                  document.getElementById("confirmationMsg").innerHTML = coloredText;

            }else{
                            document.getElementById("confirmationMsg").innerHTML = msg;

            }
          }

  const rsvpForm = document.getElementById("rsvpForm");
  const modal = document.getElementById("godModal");

  rsvpForm.addEventListener("submit", function (e) {
    // Show spiritual modal
    modal.classList.remove("hidden");

  });
  </script>

</body>
</html>

    