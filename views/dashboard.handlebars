      </footer>
    </div>
  </div>

  <!-- Script -->
  <script>
    document.getElementById("rsvpForm").addEventListener("submit", function (e) {
      e.preventDefault();
      document.getElementById("confirmationMsg").classList.remove("hidden");
      this.reset();
    });
