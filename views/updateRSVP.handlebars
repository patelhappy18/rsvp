<div id="godModal" class="fixed inset-0 bg-black/50 flex items-center justify-center z-50 hidden">
  <div class="bg-white rounded-2xl shadow-xl p-6 text-center max-w-sm w-full animate-pulse">
    <img src="/assets/images/vishnubhagvaan.jpg" alt="Satyanarayan" class="w-24 mx-auto mb-4" />
    <h2 class="text-xl font-semibold text-purple-700">Sending your RSVP...</h2>
    <p class="text-gray-600 mt-2">Seeking blessings from Satyanarayan Bhagwan 🙏</p>
  </div>
</div>

        <!-- RSVP Form -->
        <form id="rsvpForm" class="space-y-4" method="post" action="/api/rsvp/updatersvpRecord">
          <input type="text" name="name" placeholder="Your Full Name" value="{{name}}" readonly class="w-full px-4 py-2 border rounded-xl" />
          <input type="email" name="email" placeholder="Email Address" value="{{email}}" readonly class="w-full px-4 py-2 border rounded-xl" />
          <select name="attendance" required class="w-full px-4 py-2 border rounded-xl">
            <option value="">Will you attend?</option>
            <option value="yes">Yes, I’ll be there</option>
            <option value="no">Sorry, I can’t make it</option>
          </select>
          <input type="number" name="guests" placeholder="Number of Guests" min="0" class="w-full px-4 py-2 border rounded-xl" />
          <button type="submit" class="w-full bg-purple-600 text-white font-semibold py-2 rounded-xl hover:bg-purple-700 transition">Update RSVP</button>
        </form>
        
        {{!-- <p id="confirmationMsg" class="mt-4 text-green-600 font-medium hidden text-center">Thank you for your RSVP! 🎉</p> --}}
        <p id="confirmationMsg" class="mt-4 text-green-600 font-medium text-center"></p>

      </div>

      <!-- Footer -->
      <footer class="text-center text-sm text-gray-600 mt-6">
        <h3 style="background-color: rgb(222, 60, 60);color:white;padding:10px;border-radius:10px">We expect your RSVP Before 25th July 2025</h3>
      </footer>
    </div>
  </div>

 <script>
          const params = new URLSearchParams(window.location.search);
          const msg = params.get("msg");
          if (msg) {
            if(msg=='You have already Registered 😕 Use another Email'){
                  const coloredText = '<span style="color: rgb(222, 60, 60);">You have already Registered 😕 Use another Email.</span>';
                  document.getElementById("confirmationMsg").innerHTML = coloredText;

            }else{
                            document.getElementById("confirmationMsg").innerHTML = msg;

            }
          }

  const rsvpForm = document.getElementById("rsvpForm");
  const modal = document.getElementById("godModal");

  rsvpForm.addEventListener("submit", function (e) {
    // Show spiritual modal
    modal.classList.remove("hidden");

  });
  </script> 
</body>
